<%= form_for([@resource, @resource.comments.build]) do |f| %>
<%= f.label :Comment %>
  <div>
    <%= f.text_field :content, :style => "width:400px" , placeholder: "Add your comment here..." %>
    </div>
  <br />
  

  <div>
   <%= f.label :Rating %>
   <%= radio_button :comment, :rating, 1 %>
   <%= radio_button :comment, :rating, 2 %>
   <%= radio_button :comment, :rating, 3 %>
   <%= radio_button :comment, :rating, 4 %>
   <%= radio_button :comment, :rating, 5 %>
  </div>
  
  <%= f.submit "Comment" %>
  <% end %>
