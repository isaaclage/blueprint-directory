<h1>Comment</h1>

<%= @resource.name %>

<div>
  <%= form_for @comment, url: {action: "create" } do |f| %>
  <%= f.label :Comment %>
  <%= f.text_field :content %>

  <%= f.hidden_field :resource_id, :value => @resource.id %>
  <!-- Submits correct resource with form -->
  
  <%= f.submit "Comment" %>
  <% end %>
</div>
