<% provide(:title, @category_name) %>

<div class="category_names">
  <%= link_to @category_name, resources_path(:category => @category_id) %>
</div>

<table width='100%'>
  <tr class="bottom-border">
    <% @resources.each do |resource| %>
    <td class="space" width="10%"><%= link_to resource.name, resource %></td>
    <td class="space" width="40%"><%= resource.email %></td>
    <td class="space">Average Rating: <%= resource.average_rating %></td>
  </tr>
  <% end %>
</table>


<br />

<%= link_to new_resource_path(:category => @category_id) do %>
<%= image_tag("plus.png", height: 30, width: 30) %>Create a New <%= @category_name %> Resource
<% end %>


